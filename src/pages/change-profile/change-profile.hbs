<div>
    {{{ linkToProfile }}}
    {{#if showPopupChanger}}
    <div class="popup-background">
        <div class="popup-changer">
            <div>Загрузите файл</div>
            <div class="file">Выбрать файл на компьютере</div>
            <button class="btn">Поменять</button>
        </div>
    </div>
    {{/if}}

    <div class="profile-page">
        <form class="form">
            <div class="content">
                {{{ avatarChanger }}}
                <div class="name">Игорь</div>

                <div class="inputs">
                    <div class="field">
                        <div class="tip">Почта</div>
                        {{{ inputEmail }}}
                    </div>
                    <div class="field">
                        <div class="tip">Логин</div>
                        {{{ inputLogin }}}
                    </div>
                    <div class="field">
                        <div class="tip">Имя</div>
                        {{{ inputFirstName }}}
                    </div>
                    <div class="field">
                        <div class="tip">Фамилия</div>
                        {{{ inputSecondName }}}
                    </div>
                    <div class="field">
                        <div class="tip">Телефон</div>
                        {{{ inputPhone }}}
                    </div>
                </div>

                <button class="btn">Сохранить</button>
            </div>
        </form>
    </div>
</div>
