<div class="message-list">
    <div class="message-area">
        {{#each messagesList}}

        {{#if master}}
        <div class="message-hold">
            <div class="right-message">
                <div>
                    {{text}}
                </div>
                <div class="status">
                    <img class="right-message-icon" src="{{{ ../messageStatus }}}">
                    <div>04:20</div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="message-hold">
            <div class="left-message">
                <div>
                    {{text}}
                </div>
                <div class="status">
                    04:20
                </div>
            </div>
        </div>
        {{/if}}

        {{/each}}
    </div>
</div>
